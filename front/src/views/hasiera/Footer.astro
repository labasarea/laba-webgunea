<style lang="scss">
  .footer {
    padding: 48px;

    background-color: var(--marroia);
    color: var(--gorria);
  }

  .footer-logo {
    height: 56px;
  }

  .lehenengo-lerroa {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    border-bottom: 2px solid var(--gorria);
    padding-bottom: 48px;
  }

  .bigarren-lerroa {
    display: flex;
    justify-content: space-between;
    padding-top: 48px;
  }

  address {
    font-style: normal;
    text-transform: uppercase;
  }

  ul {
    display: flex;
    padding: 0;
    list-style: none;
  }

  .elementu-legala {
    &:not(:last-child) {
      margin-right: 8px;

      &::after {
        content: "/";
        margin-left: 8px;
      }
    }
  }

  .sare-sozialak {
    gap: 16px;
    text-transform: uppercase;
  }

  a {
    color: var(--gorria);

    &:hover {
      text-decoration: none;
    }
  }
