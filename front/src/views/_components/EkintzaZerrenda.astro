---
import { type Ekintza } from "models/Ekintza";
import { EkintzaZerrenda as EkintzaZerrendaReact } from "./react/EkintzaZerrenda";

interface Props {
  ekintzak: Pick<
    Ekintza,
    "id" | "izenburua" | "hitzordua" | "slug" | "mainMedia"
  >[];
  title?: string;
  description?: string;
}

const { ekintzak, title, description } = Astro.props;
---

<EkintzaZerrendaReact
  ekintzak={ekintzak}
  title={title}
  description={description}
  client:load
/>
