---
import Logo from "../../assets/labaLogo.svg";

interface Props {
  isAbsolutePosition?: boolean;
}

const { isAbsolutePosition = false } = Astro.props;
const currentPath = Astro.url.pathname;
---

<header class={isAbsolutePosition ? "absolute-position" : ""}>
  <div class="address">
    {
      currentPath != "/" && (
        <a href="/">
          <span class="visually-hidden">Laba</span>
          <Logo class="logo" />
        </a>
      )
    }
    <address>
      <p>Gazteluko plaza, 2</p>
      <p>Iru√±ea</p>
    </address>
  </div>

  <nav>
    <h2>MENUA</h2>
    <ul>
      <li><a href="/#agenda">Agenda</a></li>
      <li><a href="/#izan-labazkide">Izan Labazkide</a></li>
      <li><a href="/#parte-hartu">Parte hartu</a></li>
    </ul>
  </nav>

  <nav>
    <h2>HARREMANDU</h2>
    <ul>
      <li><a href="https://twitter.com/labasarea/">X</a></li>
      <li><a href="https://www.instagram.com/labasarea/">Instagram</a></li>
    </ul>
  </nav>

  <address>
    <h2>IDATZI</h2>
    <a href="mailto:info@laba.eus">info@laba.eus</a>
  </address>
</header>

<style lang="scss">
  header {
    display: grid;
    grid-template-columns: 1fr 1.5fr 1fr 1fr;
    padding: 48px;

    color: var(--gorria);
  }

  .absolute-position {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
  }

  .address {
    display: flex;
    gap: 24px;
    align-items: center;
  }

  .logo {
    width: 112px;
  }

  address {
    font-style: normal;
  }

  h2 {
    text-transform: uppercase;
    font-size: 16px;
    line-height: 150%;
  }

  ul {
    display: flex;
    gap: 24px;
    padding: 0;
    list-style: none;
  }

  li {
    &:not(:last-child) {
      &::after {
        content: ",";
      }
    }
  }

  a {
    color: var(--gorria);

    text-decoration: underline;

    &:hover {
      text-decoration: none;
    }
  }
</style>
