---
import type { OrriBasikoa } from "models/OrriBasikoa";
import Layout from "../../layouts/Layout.astro";
import Header from "views/_components/Header.astro";
import Footer from "views/_components/Footer.astro";
import MarkdownParser from "views/_components/MarkdownParser.astro";

interface Props {
  orriBasikoa: OrriBasikoa;
}

const { orriBasikoa } = Astro.props;
---

<Layout title={orriBasikoa.izenburua} description={orriBasikoa.deskribapena}>
  <Header />

  <main>
    <h1>{orriBasikoa.izenburua}</h1>
    <article>
      {
        orriBasikoa.edukiLibrea.map((paragraphTestua) => (
          <MarkdownParser content={paragraphTestua.testua} />
        ))
      }
    </article>
  </main>

  <Footer />
</Layout>

<style lang="scss">
  @use "../../style/mixins/displayFonts.scss";
  @use "../../style/mixins/grid12Columns.scss";
  @use "../../style/tools/mediaQueries.scss";

  main {
    padding-left: var(--space-05-mobile);
    padding-right: var(--space-05-mobile);
    padding-top: var(--space-05-mobile);
    padding-bottom: var(--space-07-mobile);

    color: var(--marroia);

    @include grid12Columns.grid;
    @include mediaQueries.aboveTablet {
      padding-left: var(--space-07-desktop);
      padding-right: var(--space-07-desktop);
      padding-top: var(--space-07-desktop);
      padding-bottom: var(--space-09-desktop);
    }
  }

  h1 {
    grid-column: 1 / -1;

    @include displayFonts.display1;

    @include mediaQueries.aboveTablet {
      grid-column: 4 / span 6;
    }
  }

  article {
    grid-column: 1 / -1;

    @include mediaQueries.aboveTablet {
      grid-column: 4 / span 6;
    }
  }
</style>
